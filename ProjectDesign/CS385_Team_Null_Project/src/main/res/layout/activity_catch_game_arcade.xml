<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context="com.cs385.teamnull.projectdesign.CatchGameArcade">

    <FrameLayout
        android:id="@+id/gameFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textSize="25sp"
            android:paddingLeft="280dp"
            android:gravity="center_vertical"
            android:textColor="@color/green"/>

        <ImageView
            android:id="@+id/character"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/square"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="500dp"/>

        <ImageView
            android:id="@+id/redcircle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-80dp"
            app:srcCompat="@drawable/redcircle" />

        <ImageView
            android:id="@+id/redcircle2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-80dp"
            app:srcCompat="@drawable/redcircle" />

        <ImageView
            android:id="@+id/redcircle3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-80dp"
            app:srcCompat="@drawable/redcircle" />

        <ImageView
            android:id="@+id/greencircle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-80dp"
            app:srcCompat="@drawable/greencircle" />
        <ImageView
            android:id="@+id/greencircle2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-80dp"
            app:srcCompat="@drawable/greencircle" />
        <ImageView
            android:id="@+id/greencircle3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-80dp"
            app:srcCompat="@drawable/greencircle" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Over"
            android:textSize="40sp"
            android:textColor="@color/green"
            android:layout_marginTop="-100dp"
            android:layout_gravity="center"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score:"
            android:textSize="40sp"
            android:textColor="@color/green"
            android:layout_marginTop="-50dp"
            android:layout_gravity="center"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High Score"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:layout_gravity="center"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Again"
            android:textAllCaps="false"
            android:background="@color/green"
            android:onClick="playAgain"
            android:visibility="invisible"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"/>

    </FrameLayout>

</LinearLayout>

