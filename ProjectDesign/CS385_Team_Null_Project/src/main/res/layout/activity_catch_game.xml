<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.cs385.teamnull.projectdesign.CatchGame">

    <FrameLayout
        android:id="@+id/gameFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="-3dp"
            android:fontFamily="serif-monospace"
            android:layout_gravity="center|bottom"
            android:gravity="center|bottom"
            android:text="SCORE : "
            android:textColor="@color/colorRed"
            android:textSize="25sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="-3dp"
            android:fontFamily="serif-monospace"
            android:text="0/10"
            android:layout_gravity="right|bottom"
            android:gravity="right|bottom"
            android:textColor="@color/green"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <ImageView
            android:id="@+id/character"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="500dp"
            app:srcCompat="@drawable/square" />

        <ImageView
            android:id="@+id/redcircle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-80dp"
            app:srcCompat="@drawable/redcircle" />

        <ImageView
            android:id="@+id/redcircle2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-80dp"
            app:srcCompat="@drawable/redcircle" />
        <ImageView
            android:id="@+id/redcircle3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-80dp"
            app:srcCompat="@drawable/redcircle" />


        <ImageView
            android:id="@+id/greencircle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-80dp"
            app:srcCompat="@drawable/greencircle" />

        <ImageView
            android:id="@+id/greencircle2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-80dp"
            app:srcCompat="@drawable/greencircle" />

        <ImageView
            android:id="@+id/greencircle3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="-80dp"
            app:srcCompat="@drawable/greencircle" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-100dp"
            android:text="Game Over"
            android:textColor="@color/green"
            android:textSize="40sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:text="Score:"
            android:textColor="@color/green"
            android:textSize="40sp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="High Score"
            android:textColor="@color/green"
            android:textSize="20sp"
            android:visibility="invisible" />



        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:background="@color/green"
            android:onClick="playAgain"
            android:text="Play Again"
            android:textAllCaps="false"
            android:visibility="invisible" />



    </FrameLayout>
</LinearLayout>
