<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cs385.teamnull.projectdesign.BinaryArcade"
    android:background="#000000">

    <Button
        android:id="@+id/button1"
        android:text="1"
        android:onClick="send1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/lock_button"
        android:fontFamily="serif-monospace"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@+id/button2"
        app:layout_constraintRight_toLeftOf="@+id/button2"
        android:layout_marginTop="0dp"
        android:layout_marginRight="15dp" />
    <Button
        android:id="@+id/button2"
        android:text="2"
        android:onClick="send2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/lock_button"
        android:fontFamily="serif-monospace"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4"
        android:layout_marginTop="0dp" />
    <Button
        android:id="@+id/button3"
        android:text="3"
        android:onClick="send3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/lock_button"
        android:fontFamily="serif-monospace"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@+id/button2"
        android:layout_marginTop="0dp" />
    <Button
        android:id="@+id/button4"
        android:text="4"
        android:onClick="send4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/lock_button"
        android:fontFamily="serif-monospace"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintRight_toLeftOf="@+id/button5"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toTopOf="@+id/button5"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/lock_button"
        android:fontFamily="serif-monospace"
        android:onClick="send5"
        android:text="5"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2" />
    <Button
        android:id="@+id/button6"
        android:text="6"
        android:onClick="send6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/lock_button"
        android:fontFamily="serif-monospace"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/button5"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@+id/button5"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/lock_button"
        android:fontFamily="serif-monospace"
        android:onClick="send7"
        android:text="7"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintRight_toLeftOf="@+id/button8"
        app:layout_constraintTop_toTopOf="@+id/button8" />

    <Button
        android:id="@+id/button8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/lock_button"
        android:fontFamily="serif-monospace"
        android:onClick="send8"
        android:text="8"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/button5" />
    <Button
        android:id="@+id/button9"
        android:text="9"
        android:onClick="send9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/lock_button"
        android:fontFamily="serif-monospace"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/button8"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@+id/button8"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/enterbutton"
        android:layout_width="268dp"
        android:layout_height="61dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/lock_button"
        android:fontFamily="serif-monospace"
        android:onClick="sendEnter"
        android:text="ENTER"
        android:textColor="#ffffff"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button8" />

    <TextView
        android:id="@+id/enterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="ENTER CODE : "
        android:textColor="@color/colorGreen"
        android:textSize="28sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="TextView"
        android:textColor="@color/colorGreen"
        android:textSize="28sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline20"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="serif-monospace"
        android:text="____ ____ ____ ____"
        android:textColor="@color/colorGreen"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        android:layout_marginTop="-2dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.051146384" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="-3dp"
        android:fontFamily="serif-monospace"
        android:text="SCORE : "
        android:textColor="@color/colorGreen"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        tools:text="SCORE : " />

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2010582" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.29" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />


</android.support.constraint.ConstraintLayout>
